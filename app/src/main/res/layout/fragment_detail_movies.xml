<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    tools:context=".ui.detail.movies.DetailMoviesFragment">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerFrameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shimmer_detail_movies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_shimmer"
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@color/blue_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_label_title_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/title"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_shimmer"
                app:layout_constraintTop_toTopOf="@+id/img_shimmer" />

            <TextView
                android:id="@+id/tv_title_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/blue_light"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/tv_label_title_shimmer"
                app:layout_constraintStart_toStartOf="@+id/tv_label_title_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_title_shimmer" />

            <TextView
                android:id="@+id/tv_label_budget_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/budget"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_title_shimmer"
                app:layout_constraintStart_toStartOf="@+id/tv_title_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_shimmer" />

            <TextView
                android:id="@+id/tv_budget_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/blue_light"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/tv_label_budget_shimmer"
                app:layout_constraintStart_toStartOf="@+id/tv_label_budget_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_budget_shimmer" />

            <TextView
                android:id="@+id/tv_label_genre_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/genre"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_budget_shimmer"
                app:layout_constraintStart_toStartOf="@+id/tv_budget_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/tv_budget_shimmer" />

            <TextView
                android:id="@+id/rv_genre_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/blue_light"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/tv_label_genre_shimmer"
                app:layout_constraintStart_toStartOf="@+id/tv_label_genre_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_genre_shimmer" />

            <TextView
                android:id="@+id/tv_label_rating_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/rating"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/rv_genre_shimmer"
                app:layout_constraintStart_toStartOf="@+id/rv_genre_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/rv_genre_shimmer" />

            <RatingBar
                android:id="@+id/rating_bar_shimmer"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:rating="5"
                app:layout_constraintStart_toStartOf="@+id/tv_label_rating_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_rating_shimmer" />

            <TextView
                android:id="@+id/tv_released_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/blue_light"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/tv_label_rating_shimmer"
                app:layout_constraintStart_toStartOf="@+id/rating_bar_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/rating_bar_shimmer" />

            <TextView
                android:id="@+id/tv_homepage_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/blue_light"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/tv_released_shimmer"
                app:layout_constraintStart_toStartOf="@+id/img_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/tv_released_shimmer" />

            <TextView
                android:id="@+id/tv_label_overview_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/overview"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_released_shimmer"
                app:layout_constraintStart_toStartOf="@+id/img_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/tv_homepage_shimmer" />

            <TextView
                android:id="@+id/tv_overview_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/blue_light"
                android:minLines="5"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/tv_label_overview_shimmer"
                app:layout_constraintStart_toStartOf="@+id/tv_label_overview_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_overview_shimmer" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_detail_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmerFrameLayout">

        <ImageView
            android:id="@+id/img_detail_movies"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@color/teal_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_label_title_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_detail_movies"
            app:layout_constraintTop_toTopOf="@+id/img_detail_movies" />

        <TextView
            android:id="@+id/tv_title_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/movies_title"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_title_movies"
            app:layout_constraintStart_toStartOf="@+id/tv_label_title_movies"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_title_movies" />

        <TextView
            android:id="@+id/tv_label_budget_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/budget"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_movies"
            app:layout_constraintStart_toStartOf="@+id/tv_title_movies"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_movies" />

        <TextView
            android:id="@+id/tv_budget_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/movies_budget"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_budget_movies"
            app:layout_constraintStart_toStartOf="@+id/tv_label_budget_movies"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_budget_movies" />

        <TextView
            android:id="@+id/tv_label_genre_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/genre"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_budget_movies"
            app:layout_constraintStart_toStartOf="@+id/tv_budget_movies"
            app:layout_constraintTop_toBottomOf="@+id/tv_budget_movies" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_genre_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_genre_movies"
            app:layout_constraintStart_toStartOf="@+id/tv_label_genre_movies"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_genre_movies"
            tools:listitem="@layout/item_genre" />

        <TextView
            android:id="@+id/tv_label_rating_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/rating"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/rv_genre_movies"
            app:layout_constraintStart_toStartOf="@+id/rv_genre_movies"
            app:layout_constraintTop_toBottomOf="@+id/rv_genre_movies" />

        <RatingBar
            android:id="@+id/rating_bar_movies"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:numStars="5"
            app:layout_constraintStart_toStartOf="@+id/tv_label_rating_movies"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_rating_movies" />

        <TextView
            android:id="@+id/tv_released_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/released"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_rating_movies"
            app:layout_constraintStart_toStartOf="@+id/rating_bar_movies"
            app:layout_constraintTop_toBottomOf="@+id/rating_bar_movies" />

        <TextView
            android:id="@+id/tv_homepage_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/homepage_movies"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tv_released_movies"
            app:layout_constraintStart_toStartOf="@+id/img_detail_movies"
            app:layout_constraintTop_toBottomOf="@+id/tv_released_movies" />

        <TextView
            android:id="@+id/tv_label_overview_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/overview"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_released_movies"
            app:layout_constraintStart_toStartOf="@+id/img_detail_movies"
            app:layout_constraintTop_toBottomOf="@+id/tv_homepage_movies" />

        <TextView
            android:id="@+id/tv_overview_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/overview_movies"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_overview_movies"
            app:layout_constraintStart_toStartOf="@+id/tv_label_overview_movies"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_overview_movies" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>